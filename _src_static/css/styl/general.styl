/* Space out content a bit */
body
	padding 0
	font-family mainFont
	background-color bgColor
	if dark( bgColor )
		color lightText
	else
		color darkText


/* Everything but the jumbotron gets side spacing for mobile first views */
.header,
.footer
	padding-right 15px
	padding-left 15px

.container.main
	margin-top 85px
	
.headwrp
	background-color clNavbar
	z-index 1000
	position fixed
	top 0
	left 0
	right 0
	transition all .2s
	opacity 1
	box-shadow	0 0 10px rgba( black, 0 )
	.header
	h3
		transition padding .2s

.headwrp.affix
	opacity .95
	box-shadow 0 0 10px rgba( black, .3 )
	.header
		padding-top 5px
	h3
		padding-bottom 5px

h2
	font-weight 200
	font-size 20px
	text-align center
	padding 0 0 10px
	margin 40px 20% 0		

/* Custom page header */
.header
	padding-top 25px
	margin 0
	/* Make the masthead heading the same height as the navigation */
	h3
		padding-bottom 19px
		margin-top 0
		margin-bottom 0
		line-height 40px

	a
		if light( clNavbar ) && light( bgColor )
			color darkText
		else if dark( clNavbar )
			color lightText
		else
			color clLink

a
	color clLink
a:active
a:hover
	color clLink - 10%

/* Custom page footer */
.footer
	padding 25px 0 50px
	color #777
	font-size 11px
	background clFooterBg
	if dark( clFooterBg )
		color clFooterBg + 60%
	else
		color clFooterBg - 25%

	.links
		text-align center
		> div:first-child
			text-align left
		> div:last-child
			text-align right

	.btn
	.btn:hover
	.btn:focus
		if dark( clFooterBg )
			color lightText
		else
			color darkText

.notfound
	text-align center

/* Bootstrap overwrites */

.nav-pills > li.active > a
.nav-pills > li.active > a:hover
.nav-pills > li.active > a:focus
	background-color clNavbar
	if light( clNavbar )
		color darkText
	else if dark( clNavbar )
		color lightText
	else
		color clLink

/* Responsive Portrait tablets and up */
@media screen and (min-width 768px)
	/* Remove the padding we set earlier */
	.header,
	.footer
		padding-right 0
		padding-left 0


@media (max-width: 767px)
	.nav > li.homenav
		display none

	.headwrp h3
		font-size 15px

	.footer
		text-align center
		.links > div
			&
			&:first-child
			&:last-child
				text-align center